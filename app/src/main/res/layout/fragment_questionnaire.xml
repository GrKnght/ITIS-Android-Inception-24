<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/question_tv"
        android:layout_width="0dp"
        android:text="Какой-то вопрос"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/answer_1_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Рандомный ответ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/question_tv" />

    <TextView
        android:id="@+id/answer_2_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Рандомный ответ 2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/answer_1_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>